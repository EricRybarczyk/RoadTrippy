<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/title_text_driving_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:labelFor="@+id/preference_value_driving_hours"
        style="@style/DialogTitle"
        android:text="@string/pref_driving_hours_title" />

    <EditText
        android:id="@+id/preference_value_driving_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:width="70dp"
        android:inputType="number"
        android:maxLength="2"
        style="@style/TextInput"/>

    <Button
        android:id="@+id/button_save_driving_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        style="@style/AppButton"
        android:width="100dp"
        android:background="@drawable/button_shape"
        android:text="@string/pref_button_save_label"/>

</LinearLayout>